<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friend_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="@dimen/default_padding_half"
            android:background="@drawable/friend_avatar_background"
            android:clipToOutline="true"
            android:contentDescription="@string/profile_avatar"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_skull" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_name"
                style="@style/NavMenuText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="PlayerOne" />

            <TextView
                android:id="@+id/friend_username"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_quarter"
                android:textColor="@color/darker_grey"
                tools:text="@playerone" />

            <TextView
                android:id="@+id/friend_status"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_quarter"
                tools:text="Friend" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_half"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/primary_action"
            style="@style/SelectableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="@dimen/default_padding_half"
            android:paddingVertical="@dimen/default_padding_half"
            tools:text="Remove" />

        <TextView
            android:id="@+id/secondary_action"
            style="@style/SelectableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding_half"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="@dimen/default_padding_half"
            android:paddingVertical="@dimen/default_padding_half"
            tools:text="Decline" />

    </LinearLayout>

</LinearLayout>
