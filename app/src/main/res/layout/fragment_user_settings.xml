<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/user_settings" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/status_text"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_settings_logged_out"
                tools:text="Logged in as PlayerOne" />

            <LinearLayout
                android:id="@+id/user_info_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/Header3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_button_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:contentDescription="@string/profile_avatar"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_skull" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Header3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/display_name_label" />

                        <EditText
                            android:id="@+id/display_name_input"
                            style="@style/NameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:hint="@string/display_name_hint"
                            android:inputType="textPersonName"
                            tools:text="Player One" />

                        <Button
                            android:id="@+id/change_avatar_button"
                            style="@style/MenuButton.Round"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/menu_button_margin"
                            android:minHeight="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/change_avatar"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/save_profile_button"
                    style="@style/MenuButton.Round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_button_margin"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/save_profile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/message_text"
                    style="@style/Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_button_margin"
                    android:visibility="gone"
                    tools:text="Profile updated."
                    tools:visibility="visible" />

                <TextView
                    style="@style/Header3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:text="@string/account_details" />

                <TextView
                    style="@style/Header3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_button_margin"
                    android:text="@string/username_label" />

                <TextView
                    android:id="@+id/username_value"
                    style="@style/Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="PlayerOne" />

                <TextView
                    style="@style/Header3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:text="@string/email_label" />

                <TextView
                    android:id="@+id/email_value"
                    style="@style/Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="player@example.com" />

            </LinearLayout>

            <TextView
                android:id="@+id/error_text"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:textColor="@color/light_red"
                android:visibility="gone"
                tools:text="Logout failed. Try again."
                tools:visibility="visible" />

            <Button
                android:id="@+id/login_button"
                style="@style/MenuButton.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_button_margin"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/login"
                android:textSize="16sp" />

            <Button
                android:id="@+id/logout_button"
                style="@style/MenuButton.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_button_margin"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/logout"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
