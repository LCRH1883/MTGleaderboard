<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/match_title"
        style="@style/Header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Commander Â· 4 Players" />

    <TextView
        android:id="@+id/match_meta"
        style="@style/Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_quarter"
        tools:text="Sep 12, 2024" />

    <TextView
        android:id="@+id/match_winner"
        style="@style/Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_half"
        tools:text="Winner: Alex" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_quarter"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/match_duration"
            style="@style/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Duration 00:42" />

        <TextView
            android:id="@+id/match_sync_status"
            style="@style/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding"
            tools:text="Pending upload" />
    </LinearLayout>
</LinearLayout>
