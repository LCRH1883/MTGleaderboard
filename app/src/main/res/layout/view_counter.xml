<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/counter_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/counter_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6667" />

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amount"
        style="@style/CounterText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/counter_right_guideline"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="@id/counter_left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1234" />

    <com.kenkeremath.mtgcounter.view.counter.CounterIconView
        android:id="@+id/counter_icon_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintHeight_min="48dp"
        app:layout_constraintTop_toBottomOf="@id/amount" />

    <com.kenkeremath.mtgcounter.view.HoldableButton
        android:id="@+id/increment_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toStartOf="@id/counter_left_guideline"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kenkeremath.mtgcounter.view.HoldableButton
        android:id="@+id/decrement_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/counter_left_guideline"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/increment_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:includeFontPadding="false"
        android:text="+"
        android:textColor="?attr/scTextColorPrimary"
        android:textSize="@dimen/counter_incrementer_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/increment_button"
        app:layout_constraintEnd_toEndOf="@id/increment_button"
        app:layout_constraintStart_toStartOf="@id/increment_button"
        app:layout_constraintTop_toTopOf="@id/increment_button" />

    <TextView
        android:id="@+id/decrement_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:includeFontPadding="false"
        android:text="-"
        android:textColor="?attr/scTextColorPrimary"
        android:textSize="@dimen/counter_incrementer_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/decrement_button"
        app:layout_constraintEnd_toEndOf="@id/decrement_button"
        app:layout_constraintStart_toStartOf="@id/decrement_button"
        app:layout_constraintTop_toTopOf="@id/decrement_button" />


</androidx.constraintlayout.widget.ConstraintLayout>
